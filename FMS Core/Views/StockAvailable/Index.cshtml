@model IEnumerable<FMS_Core.Models.vw_StockAvailable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stock Availability Report</h2>

 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemsID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HSN_SAC_NO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockOut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StockAvailable)
        </th>


    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemsID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HSN_SAC_NO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockOut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockAvailable)
        </td>


    </tr>
}

</table>
