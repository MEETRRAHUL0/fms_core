</style>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <partial name="_Header" />
            @*@Html.Hidden("ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.Hidden("CreatedDatetime", null, htmlAttributes: new { @class = "form-control" })*@
            <input type="hidden" id="Id" name="Id" value="@ViewBag.Id" />
            <input type="hidden" name="CreatedDatetime" value="@ViewBag.CreatedDatetime" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group has-float-label">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>*@
            @*<span class="has-float-label">

                    <input class="form-control" id="Name" type="text" placeholder="Name"/>

                    <label for="Name">First Name</label>

                </span>*@

            <div class="form-group has-float-label">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <label asp-for="Name" class="control-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <input asp-for="HsnSacNo" class="form-control" placeholder="HsnSacNo" />
                <label asp-for="HsnSacNo" class="control-label"></label>
                <span asp-validation-for="HsnSacNo" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <select asp-for="Type" class="form-control" asp-items="ViewBag.Type"><option value="">Please select</option></select>
                <label asp-for="Type" class="control-label"></label>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <select asp-for="MeasuringUnit" class="form-control" asp-items="ViewBag.MeasuringUnit"><option value="">Please select</option></select>
                <label asp-for="MeasuringUnit" class="control-label"></label>
                <span asp-validation-for="MeasuringUnit" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <input asp-for="Manufacture" class="form-control" placeholder="Manufacture" />
                <label asp-for="Manufacture" class="control-label"></label>
                <span asp-validation-for="Manufacture" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <input asp-for="BarCode" class="form-control" placeholder="BarCode" />
                <label asp-for="BarCode" class="control-label"></label>
                <span asp-validation-for="BarCode" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <input asp-for="ItemUniqueDescription" class="form-control" placeholder="ItemUniqueDescription" />
                <label asp-for="ItemUniqueDescription" class="control-label"></label>
                <span asp-validation-for="ItemUniqueDescription" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <select asp-for="Supplier" class="form-control" asp-items="ViewBag.Supplier"><option value="">Please select</option></select>
                <label asp-for="Supplier" class="control-label"></label>
                <span asp-validation-for="Supplier" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <input asp-for="Photo" class="form-control" placeholder="Photo" />
                <label asp-for="Photo" class="control-label"></label>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                @*<input asp-for="UseBatchNo" class="form-control" placeholder="UseBatchNo" />*@
                @Html.EditorFor(model => model.UseBatchNo, new { htmlAttributes = new { @class = "form-control" } })
                <label asp-for="UseBatchNo" class="control-label"></label>
                <span asp-validation-for="UseBatchNo" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                @*<input asp-for="UseMfgDate" class="form-control" placeholder="UseMfgDate" />*@
                @Html.EditorFor(model => model.UseMfgDate, new { htmlAttributes = new { @class = "form-control" } })
                <label asp-for="UseMfgDate" class="control-label"></label>
                <span asp-validation-for="UseMfgDate" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                @*<input asp-for="UseExpiryDate" class="form-control" placeholder="UseExpiryDate" />*@
                @Html.EditorFor(model => model.UseExpiryDate, new { htmlAttributes = new { @class = "form-control" } })
                <label asp-for="UseExpiryDate" class="control-label"></label>
                <span asp-validation-for="UseExpiryDate" class="text-danger"></span>
            </div>

            <div class="form-group has-float-label">
                <select asp-for="Gst" class="form-control" asp-items="ViewBag.Gst"><option value="">Please select</option></select>
                <label asp-for="Gst" class="control-label"></label>
                <span asp-validation-for="Gst" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <label asp-for="OpeningStock" class="control-label">OpeningStock</label>
                <input asp-for="OpeningStock" class="form-control" />
                <span asp-validation-for="OpeningStock" class="text-danger"></span>
            </div>
            <div class="form-group has-float-label">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
